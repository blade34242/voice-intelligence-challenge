{
  "name": "everlast-voice-intel",
  "private": true,
  "version": "0.1.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"cross-env PORT=3001 next dev\" \"cross-env ELECTRON_IS_DEV=1 ELECTRON_DISABLE_SANDBOX=1 NEXT_DEV_URL=http://localhost:3001 TS_NODE_PROJECT=electron/tsconfig.json TS_NODE_TRANSPILE_ONLY=1 electron --no-sandbox electron/main.cjs\"",
    "build": "next build && tsc -p electron/tsconfig.json && node electron/copy-assets.cjs",
    "pack": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "sql.js": "^1.13.0",
    "ws": "^8.18.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "39.3.0",
    "electron-builder": "^26.0.20",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.everlast.voice",
    "productName": "Everlast Voice Intelligence",
    "win": {
      "icon": "electron/assets/icon.ico"
    },
    "files": [
      "dist/electron/**/*",
      "electron/assets/**/*",
      "assets/**/*",
      "dist/src/lib/**/*",
      "out/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
